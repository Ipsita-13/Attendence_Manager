<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/orderdetailspage"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="@drawable/edit_txt_background">

        <EditText
            android:id="@+id/customername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="52dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/edit_txt_background"
            android:hint="Username"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/customeraddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:hint="Address"
            android:textSize="25sp"
            android:background="@drawable/edit_txt_background"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customername" />

        <EditText
            android:id="@+id/customerphonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="Phone number"
            android:textSize="25sp"
            android:background="@drawable/edit_txt_background"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customeraddress" />

        <EditText
            android:id="@+id/customeremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_txt_background"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customerphonenumber" />

        <TextView
            android:id="@+id/orderedproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Ordered Product"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_txt_background"
            android:paddingLeft="15dp" />
        <TextView
            android:id="@+id/orderedproductprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Product Price"
            android:background="@drawable/edit_txt_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orderedproduct" />


        >


    </LinearLayout>

    <Button
        android:id="@+id/ordernow"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="Order now"
        android:textSize="25sp"
        android:backgroundTint="#D81515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/orderdetailspage" />

    <Button
        android:id="@+id/yourorder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="20dp"
        android:text="Your Order"
        android:backgroundTint="#E91E63"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/ordernow"
        app:layout_constraintTop_toBottomOf="@id/orderdetailspage" />


</androidx.constraintlayout.widget.ConstraintLayout>